{
  "compilerOptions": {
    "rootDir": "../CxASTScan",
    "outDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "target": "es6",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "pretty": true
  },
  "include": [
    "services/**/*",
    "test/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "ui/**/*"
  ]
}